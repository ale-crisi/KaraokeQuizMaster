         <Button fx:id="song9Button" text="Songtitel IX" styleClass="song-bar" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <Button fx:id="song5Button" text="Songtitel V" styleClass="song-bar" GridPane.rowIndex="4" />
         <Button fx:id="song10Button" text="Songtitel X" styleClass="song-bar" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      </GridPane>
   </center>
   <bottom>
      <VBox alignment="CENTER" spacing="8.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="0.0" right="0.0" top="0.0" />
         </padding>
         <Button fx:id="selectButton" mnemonicParsing="false" text="Weiter zum nÃ¤chsten Spieler" styleClass="gold-button" />
      </VBox>
