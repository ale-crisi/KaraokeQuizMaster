<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.kqm.ui.controller.TieBreakController">
   <children>
      <ImageView fitWidth="1200" fitHeight="800" preserveRatio="false">
         <image>
            <Image url="@assets/Prog.jpeg" />
         </image>
      </ImageView>
      <BorderPane fx:id="mainPane" styleClass="screen" stylesheets="@styles.css">

         <top>
            <VBox BorderPane.alignment="CENTER">
               <Label fx:id="currentPlayerLabel" text="Player 1" style="-fx-text-fill: #CC0000; -fx-font-weight: bold; -fx-font-size: 20px;">
                  <VBox.margin>
                     <Insets top="20.0" left="20.0" />
                  </VBox.margin>
               </Label>
               <HBox alignment="CENTER">
                  <Label fx:id="timerLabel" text="0.00" textFill="#FFEE66" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(255,238,102,0.4), 15, 0.5, 0, 0);" translateY="113" translateX="38">
                     <HBox.margin>
                        <Insets top="0.0" />
                     </HBox.margin>
                  </Label>
               </HBox>
            </VBox>
         </top>
         <center>
            <VBox spacing="18.0" alignment="CENTER" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="20.0" left="40.0" right="40.0" top="0.0" />
               </padding>
               <VBox alignment="CENTER" spacing="6.0" translateY="-271.77">
                  <Label fx:id="questionLabel" text="Tiebreaker Frage?" wrapText="true" styleClass="sub-title" maxWidth="Infinity" textAlignment="CENTER" alignment="CENTER" style="-fx-font-size: 22px; -fx-text-fill: #ffffff; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 10;" translateX="0" />
               </VBox>
               <HBox spacing="40.0" alignment="CENTER" translateY="-170.3">
                  <VBox spacing="18.0" alignment="CENTER_LEFT" translateX="-114.0">
                     <HBox spacing="12.0" styleClass="answer-row" translateY="45.36">
                        <Button fx:id="answerA" text="A) Answer 1" styleClass="answer-bar" style="-fx-font-weight: bold; -fx-font-size: 19px;" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox spacing="12.0" styleClass="answer-row" translateY="105.94" translateX="38.0">
                        <Button fx:id="answerB" text="B) Answer 2" styleClass="answer-bar" style="-fx-font-weight: bold; -fx-font-size: 19px;" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                     </HBox>
                  </VBox>
                  <VBox spacing="18.0" alignment="CENTER_LEFT" translateX="189.0">
                     <HBox spacing="12.0" styleClass="answer-row" translateY="45.36">
                        <Button fx:id="answerC" text="C) Answer 3" styleClass="answer-bar" style="-fx-font-weight: bold; -fx-font-size: 19px;" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                     </HBox>
                     <HBox spacing="12.0" styleClass="answer-row" translateY="102.06">
                        <Button fx:id="answerD" text="D) Answer 4" styleClass="answer-bar" style="-fx-font-weight: bold; -fx-font-size: 19px;" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                     </HBox>
                  </VBox>
               </HBox>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="CENTER" spacing="12.0" BorderPane.alignment="CENTER" style="-fx-background-color: transparent;">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
               </padding>
               <Button fx:id="submitButton" mnemonicParsing="false" text="Antwort abgeben" styleClass="gold-button" visible="false" />
            </VBox>
         </bottom>
      </BorderPane>
   </children>
</StackPane>

