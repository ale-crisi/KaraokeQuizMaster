<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.kqm.ui.controller.QuizController">
    <children>
        <ImageView fitWidth="1200" fitHeight="800" preserveRatio="false">
            <image>
                <Image url="@assets/Question.png" />
            </image>
        </ImageView>
        <BorderPane fx:id="mainPane" styleClass="screen" stylesheets="@styles.css">

            <top>
                <VBox alignment="TOP_LEFT" spacing="6.0" BorderPane.alignment="TOP_LEFT" translateY="0">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
                    </padding>
                    <Label fx:id="playerInfoLabel" text="Player" styleClass="sub-title" style="-fx-text-fill: #8b0000; -fx-font-weight: bold;" />
                    <Label fx:id="songInfoLabel" text="Song" styleClass="sub-title" translateY="-18.9" />
                </VBox>
            </top>
            <center>
                <VBox spacing="18.0" alignment="CENTER" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="40.0" right="40.0" top="0.0" />
                    </padding>
                    <VBox alignment="CENTER" spacing="6.0" translateY="-177.66">
                        <Label text="Frage 1/5" styleClass="sub-title" translateX="-18.9" />
                        <Label fx:id="questionLabel" text="Frage?" wrapText="true" styleClass="sub-title" maxWidth="Infinity" textAlignment="CENTER" alignment="CENTER" style="-fx-font-size: 22px; -fx-text-fill: #ffffff; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 10;" translateX="0" />
                    </VBox>
                    <HBox spacing="40.0" alignment="CENTER" translateY="-132.3">
                        <VBox spacing="18.0" alignment="CENTER_LEFT" translateX="-190.0">
                            <HBox spacing="12.0" styleClass="answer-row" translateY="45.36">
                                <Button fx:id="answerA" text="Antwortmöglichkeit A" styleClass="answer-bar" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox spacing="12.0" styleClass="answer-row" translateY="98.28">
                                <Button fx:id="answerB" text="Antwortmöglichkeit B" styleClass="answer-bar" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>
                        <VBox spacing="18.0" alignment="CENTER_LEFT" translateX="189.0">
                            <HBox spacing="12.0" styleClass="answer-row" translateY="45.36">
                                <Button fx:id="answerC" text="Antwortmöglichkeit C" styleClass="answer-bar" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox spacing="12.0" styleClass="answer-row" translateY="94.5">
                                <Button fx:id="answerD" text="Antwortmöglichkeit D" styleClass="answer-bar" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
            </center>
            <bottom>
                <VBox alignment="CENTER" spacing="12.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
                    </padding>
                    <HBox spacing="20.0" alignment="CENTER">
                        <Button fx:id="replacementButton" text="FILL &amp; JUMP" styleClass="joker-card joker-card-fill" translateX="-302.4" />
                        <Button fx:id="fiftyFiftyButton" text="50/50" styleClass="joker-card joker-card-fifty" translateX="-18.9" />
                        <Button fx:id="hintButton" text="HINT" styleClass="joker-card joker-card-hint" translateX="113.4" />
                    </HBox>
                    <Button fx:id="submitButton" mnemonicParsing="false" text="Antwort abgeben" styleClass="gold-button" />
                </VBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>

