<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.hcw.kqm.ui.controller.QuizController">
    <children>
        <ImageView fitWidth="1200" fitHeight="800" preserveRatio="false">
            <image>
                <Image url="@assets/Question.png" />
            </image>
        </ImageView>
        <BorderPane fx:id="mainPane" styleClass="screen" stylesheets="@styles.css">

            <top>
                <VBox alignment="TOP_LEFT" spacing="6.0" BorderPane.alignment="TOP_LEFT" translateY="0">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="20.0" />
                    </padding>
                    <Label fx:id="playerInfoLabel" text="Player" styleClass="sub-title" style="-fx-text-fill: #8b0000; -fx-font-weight: bold;" />
                    <Label fx:id="songInfoLabel" text="Song" styleClass="sub-title" translateY="-18.9" />
                </VBox>
            </top>
            <center>
                <VBox spacing="18.0" alignment="CENTER" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="40.0" right="40.0" top="0.0" />
                    </padding>
                    <VBox alignment="CENTER" spacing="6.0" translateY="-83.66">
                        <Label fx:id="questionNumberLabel" text="Frage 1/5" styleClass="sub-title" translateX="-18.9" />
                        <Label fx:id="questionLabel" text="Frage?" wrapText="true" styleClass="sub-title" maxWidth="Infinity" textAlignment="CENTER" alignment="CENTER" style="-fx-font-size: 22px; -fx-text-fill: #ffffff; -fx-background-color: rgba(0,0,0,0.5); -fx-padding: 10;" translateX="0" />
                    </VBox>
                    <HBox spacing="40.0" alignment="CENTER" translateY="-38.3">
                        <VBox spacing="18.0" alignment="CENTER_LEFT" translateX="-114.0">
                            <HBox spacing="12.0" styleClass="answer-row" translateY="45.36">
                                <Button fx:id="answerA" text="Antwortmöglichkeit A" styleClass="answer-bar" prefWidth="212" minWidth="212" maxWidth="212" prefHeight="14" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox spacing="12.0" styleClass="answer-row" translateY="98.28">
                                <Button fx:id="answerB" text="Antwortmöglichkeit B" styleClass="answer-bar" prefWidth="212" minWidth="212" maxWidth="212" prefHeight="14" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>
                        <VBox spacing="18.0" alignment="CENTER_LEFT" translateX="170.0">
                            <HBox spacing="12.0" styleClass="answer-row" translateY="45.36">
                                <Button fx:id="answerC" text="Antwortmöglichkeit C" styleClass="answer-bar" prefWidth="212" minWidth="212" maxWidth="212" prefHeight="14" HBox.hgrow="ALWAYS" />
                            </HBox>
                            <HBox spacing="12.0" styleClass="answer-row" translateY="94.5">
                                <Button fx:id="answerD" text="Antwortmöglichkeit D" styleClass="answer-bar" prefWidth="212" minWidth="212" maxWidth="212" prefHeight="14" HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
            </center>
            <bottom>
                <VBox alignment="CENTER" spacing="12.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="0.0" />
                    </padding>
                    <HBox spacing="20.0" alignment="CENTER">
                        <Button fx:id="replacementButton" styleClass="joker-card joker-card-fill" translateX="-10.8" translateY="38" style="-fx-border-width: 0 !important; -fx-padding: 0 !important; -fx-background-insets: 0 !important; -fx-border: none !important; -fx-background-color: transparent !important;">
                            <graphic>
                                <ImageView fx:id="replacementImage" fitWidth="170" fitHeight="210" preserveRatio="true">
                                    <Image url="@assets/JokerKing.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="fiftyFiftyButton" styleClass="joker-card joker-card-fifty" translateX="0" translateY="38" style="-fx-border-width: 0 !important; -fx-padding: 0 !important; -fx-background-insets: 0 !important; -fx-border: none !important; -fx-background-color: transparent !important;">
                            <graphic>
                                <ImageView fx:id="fiftyFiftyImage" fitWidth="170" fitHeight="210" preserveRatio="true">
                                    <Image url="@assets/JokerAss.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="hintButton" styleClass="joker-card joker-card-hint" translateX="22.6" translateY="38" style="-fx-border-width: 0 !important; -fx-padding: 0 !important; -fx-background-insets: 0 !important; -fx-border: none !important; -fx-background-color: transparent !important;">
                            <graphic>
                                <ImageView fx:id="hintImage" fitWidth="170" fitHeight="210" preserveRatio="true">
                                    <Image url="@assets/JokerHint.png" />
                                </ImageView>
                            </graphic>
                        </Button>
                    </HBox>
                    <Button fx:id="submitButton" mnemonicParsing="false" text="Antwort abgeben" styleClass="gold-button" />
                </VBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>


